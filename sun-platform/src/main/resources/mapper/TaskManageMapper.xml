<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bxbro.sun.platform.mapper.TaskManageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bxbro.sun.common.base.domain.entity.TaskManage">
        <id column="id" property="id" />
        <result column="task_name" property="taskName" />
        <result column="task_type" property="taskType" />
        <result column="user_id" property="userId" />
        <result column="deadline" property="deadline" />
        <result column="content" property="content" />
        <result column="task_status" property="taskStatus" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <insert id="createTask" parameterType="com.bxbro.sun.common.base.domain.entity.TaskManage" useGeneratedKeys="true" keyProperty="id">
        insert into t_task_manage
            (task_name, task_type, user_id, deadline, content, task_status, create_time,update_time)
        values
            (#{taskName}, #{taskType}, #{userId}, #{deadline}, #{content}, #{taskStatus}, now(), now())
    </insert>

    <update id="updateTask" parameterType="com.bxbro.sun.common.base.domain.entity.TaskManage">
        update t_task_manage
        <set>
            <if test="taskName != null and taskName != ''">
                task_name = #{taskName},
            </if>
            <if test="taskType != null">
                task_type = #{taskType},
            </if>
            <if test="deadline != null">
                deadline = #{deadline},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="taskStatus != null">
                task_status = #{taskStatus},
            </if>
        </set>
    </update>
</mapper>